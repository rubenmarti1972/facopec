    },
    "banner": {
      "type": "media",
      "multiple": false
    },
    "contactEmail": {
      "type": "string"
    },
    "contactPhone": {
      "type": "string"
    },
    "address": {
      "type": "component",
      "component": "global.address"
    },
    "hours": {
      "type": "component",
      "component": "global.hours"
    },
    "socialLinks": {
      "type": "component",
      "repeatable": true,
      "component": "global.social-link"
